    <!-- åº†ç¥åŠ¨ç”»å±‚ -->
    <div class="celebration" id="celebration"></div>

    <script>
        // ===== æ•°æ®å­˜å‚¨ç®¡ç† =====
        // ä½¿ç”¨ LocalStorage å­˜å‚¨æ•°æ®ï¼Œé”®åä¸º 'lifeQuantifyData'
        const STORAGE_KEY = 'lifeQuantifyData';
        
        // ç»´åº¦é…ç½®ï¼ˆåç§°å’Œé¢œè‰²ï¼‰
        const dimensions = {
            mood: { name: 'å¿ƒæƒ…', color: '#F6E05E' },
            study: { name: 'å­¦ä¹ ', color: '#9F7AEA' },
            exercise: { name: 'è¿åŠ¨', color: '#F687B3' },
            sleep: { name: 'ç¡çœ ', color: '#63B3ED' },
            entertainment: { name: 'å¨±ä¹', color: '#68D391' },
            social: { name: 'ç¤¾äº¤', color: '#F6AD55' }
        };

        let currentRatings = {}; // å­˜å‚¨å½“å‰è¯„åˆ†
        let radarChart = null;   // å›¾è¡¨å®ä¾‹

        // ===== åˆå§‹åŒ– =====
        document.addEventListener('DOMContentLoaded', function() {
            initDate();
            initStarRatings();
            loadHistory();
            updateStreak();
        });

        // æ˜¾ç¤ºå½“å‰æ—¥æœŸ
        function initDate() {
            const date = new Date();
            const options = { year: 'numeric', month: 'long', day: 'numeric', weekday: 'long' };
            document.getElementById('currentDate').textContent = date.toLocaleDateString('zh-CN', options);
        }

        // åˆå§‹åŒ–æ˜Ÿçº§è¯„åˆ†äº¤äº’
        function initStarRatings() {
            document.querySelectorAll('.star-rating').forEach(container => {
                const dimension = container.dataset.dimension;
                const stars = container.querySelectorAll('.star');
                
                stars.forEach((star, index) => {
                    // é¼ æ ‡æ‚¬åœæ•ˆæœ
                    star.addEventListener('mouseenter', () => {
                        highlightStars(stars, index + 1);
                    });
                    
                    // ç‚¹å‡»é€‰æ‹©
                    star.addEventListener('click', () => {
                        currentRatings[dimension] = index + 1;
                        highlightStars(stars, index + 1, true);
                        // æ·»åŠ ç‚¹å‡»åŠ¨ç”»
                        star.style.transform = 'scale(1.4)';
                        setTimeout(() => {
                            star.style.transform = '';
                        }, 200);
                    });
                });
                
                // é¼ æ ‡ç¦»å¼€æ¢å¤åŸçŠ¶
                container.addEventListener('mouseleave', () => {
                    const rating = currentRatings[dimension] || 0;
                    highlightStars(stars, rating, true);
                });
            });
        }

        // é«˜äº®æ˜Ÿæ˜Ÿ
        function highlightStars(stars, count, permanent = false) {
            stars.forEach((star, index) => {
                if (index < count) {
                    star.classList.add('active');
                    if (permanent && index === count - 1) {
                        star.style.transform = 'scale(1.2)';
                    }
                } else {
                    star.classList.remove('active');
                    star.style.transform = '';
                }
            });
        }

        // ===== æ ¸å¿ƒåŠŸèƒ½ï¼šæäº¤è®°å½• =====
        function submitRecord() {
            // éªŒè¯æ˜¯å¦è‡³å°‘æœ‰ä¸€ä¸ªè¯„åˆ†
            if (Object.keys(currentRatings).length === 0) {
                alert('è¯·è‡³å°‘ä¸ºä¸€ä¸ªç»´åº¦è¯„åˆ†ï¼');
                return;
            }

            const record = {
                date: new Date().toISOString(),
                ratings: { ...currentRatings },
                journal: document.getElementById('journalText').value,
                total: Object.values(currentRatings).reduce((a, b) => a + b, 0)
            };

            // ä¿å­˜åˆ° LocalStorage
            saveRecord(record);
            
            // æ˜¾ç¤ºç»“æœ
            showResult(record);
            
            // åº†ç¥åŠ¨ç”»
            if (Object.keys(currentRatings).length === 6) {
                celebrate();
            }
            
            // æ›´æ–°è¿ç»­å¤©æ•°
            updateStreak();
        }

        // ä¿å­˜è®°å½•
        function saveRecord(record) {
            let data = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
            
            // æ£€æŸ¥ä»Šå¤©æ˜¯å¦å·²æœ‰è®°å½•ï¼Œæœ‰åˆ™æ›¿æ¢
            const today = new Date().toDateString();
            const existingIndex = data.findIndex(r => new Date(r.date).toDateString() === today);
            
            if (existingIndex >= 0) {
                data[existingIndex] = record;
            } else {
                data.push(record);
            }
            
            // æŒ‰æ—¥æœŸæ’åº
            data.sort((a, b) => new Date(b.date) - new Date(a.date));
            localStorage.setItem(STORAGE_KEY, JSON.stringify(data));
            
            loadHistory();
        }

        // ===== å±•ç¤ºç»“æœï¼ˆAé¡µé¢ - ç”Ÿæ´»å¡ç‰‡ï¼‰ =====
        function showResult(record) {
            document.getElementById('inputSection').style.display = 'none';
            document.getElementById('resultSection').style.display = 'block';
            
            // æ˜¾ç¤ºæ–‡å­—è®°å½•
            const journalText = record.journal.trim();
            const journalDisplay = document.getElementById('journalDisplay');
            if (journalText) {
                document.getElementById('journalContent').textContent = journalText;
                journalDisplay.style.display = 'block';
            } else {
                journalDisplay.style.display = 'none';
            }
            
            // ç”Ÿæˆé›·è¾¾å›¾
            createRadarChart(record.ratings);
            
            // æ»šåŠ¨åˆ°ç»“æœåŒºåŸŸ
            document.getElementById('resultSection').scrollIntoView({ behavior: 'smooth' });
        }

        // åˆ›å»ºé›·è¾¾å›¾
        function createRadarChart(ratings) {
            const ctx = document.getElementById('radarChart').getContext('2d');
            
            // å‡†å¤‡æ•°æ®ï¼ˆç¡®ä¿å…­ä¸ªç»´åº¦éƒ½æœ‰å€¼ï¼Œæ²¡æœ‰è¯„åˆ†çš„é»˜è®¤ä¸º0ï¼‰
            const labels = Object.values(dimensions).map(d => d.name);
            const data = Object.keys(dimensions).map(key => ratings[key] || 0);
            const colors = Object.values(dimensions).map(d => d.color);
            
            // å¦‚æœå·²æœ‰å›¾è¡¨ï¼Œå…ˆé”€æ¯
            if (radarChart) {
                radarChart.destroy();
            }
            
            radarChart = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'ä»Šæ—¥è¯„åˆ†',
                        data: data,
                        backgroundColor: 'rgba(159, 122, 234, 0.2)',
                        borderColor: 'rgba(159, 122, 234, 1)',
                        pointBackgroundColor: colors,
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: colors,
                        borderWidth: 3,
                        pointRadius: 6,
                        pointHoverRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            beginAtZero: true,
                            max: 5,
                            ticks: {
                                stepSize: 1,
                                font: { size: 12 }
                            },
                            pointLabels: {
                                font: {
                                    size: 14,
                                    weight: 'bold'
                                },
                                color: '#4a5568'
                            },
                            grid: {
                                color: 'rgba(0,0,0,0.05)'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    animation: {
                        duration: 1500,
                        easing: 'easeOutQuart'
                    }
                }
            });
        }

        // ===== è¿ç»­æ‰“å¡é€»è¾‘ =====
        function updateStreak() {
            const data = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
            if (data.length === 0) {
                document.getElementById('streakCount').textContent = '0';
                return;
            }
            
            let streak = 0;
            const today = new Date();
            today.setHours(0,0,0,0);
            
            // æ£€æŸ¥ä»Šå¤©æ˜¯å¦å·²è®°å½•
            const todayStr = today.toDateString();
            const hasToday = data.some(r => new Date(r.date).toDateString() === todayStr);
            
            // è®¡ç®—è¿ç»­å¤©æ•°
            let checkDate = new Date(today);
            if (!hasToday) {
                // å¦‚æœä»Šå¤©æ²¡è®°å½•ï¼Œä»æ˜¨å¤©å¼€å§‹ç®—
                checkDate.setDate(checkDate.getDate() - 1);
            }
            
            while (true) {
                const dateStr = checkDate.toDateString();
                const hasRecord = data.some(r => new Date(r.date).toDateString() === dateStr);
                
                if (hasRecord) {
                    streak++;
                    checkDate.setDate(checkDate.getDate() - 1);
                } else {
                    break;
                }
            }
            
            document.getElementById('streakCount').textContent = streak;
            
            // è¿ç»­7å¤©ä»¥ä¸Šæœ‰ç‰¹æ®Šæ•ˆæœ
            if (streak >= 7) {
                document.querySelector('.streak-box').style.background = 
                    'linear-gradient(135deg, #fa709a 0%, #fee140 100%)';
            }
        }

        // ===== å†å²è®°å½•å±•ç¤º =====
        function loadHistory() {
            const data = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
            const container = document.getElementById('historyList');
            
            if (data.length === 0) {
                container.innerHTML = '<p style="text-align: center; color: #a0aec0; padding: 20px;">è¿˜æ²¡æœ‰è®°å½•ï¼Œå¼€å§‹ä½ çš„ç¬¬ä¸€å¤©å§ï¼</p>';
                return;
            }
            
            container.innerHTML = data.map(record => {
                const date = new Date(record.date);
                const dateStr = `${date.getMonth()+1}æœˆ${date.getDate()}æ—¥`;
                const weekStr = ['æ—¥','ä¸€','äºŒ','ä¸‰','å››','äº”','å…­'][date.getDay()];
                
                // æ‰¾å‡ºæœ€é«˜åˆ†ç»´åº¦
                let maxDim = '';
                let maxScore = 0;
                Object.entries(record.ratings).forEach(([key, val]) => {
                    if (val > maxScore) {
                        maxScore = val;
                        maxDim = dimensions[key].name;
                    }
                });
                
                return `
                    <div class="history-item">
                        <div class="history-date">${dateStr}<br><small>å‘¨${weekStr}</small></div>
                        <div class="history-scores">
                            ${Object.entries(record.ratings).map(([key, val]) => 
                                `<span class="score-tag ${val === maxScore ? 'highlight' : ''}">
                                    ${dimensions[key].name}${'â˜…'.repeat(val)}${'â˜†'.repeat(5-val)}
                                </span>`
                            ).join('')}
                        </div>
                        <div class="history-total">${record.total}åˆ†</div>
                    </div>
                `;
            }).join('');
        }

        // ===== è¾…åŠ©åŠŸèƒ½ =====
        // æ–°çš„ä¸€å¤©æŒ‰é’®
        function newRecord() {
            // é‡ç½®è¡¨å•
            currentRatings = {};
            document.getElementById('journalText').value = '';
            document.querySelectorAll('.star').forEach(star => {
                star.classList.remove('active');
                star.style.transform = '';
            });
            
            // åˆ‡æ¢è§†å›¾
            document.getElementById('resultSection').style.display = 'none';
            document.getElementById('inputSection').style.display = 'block';
            
            // æ›´æ–°æ—¥æœŸï¼ˆä»¥é˜²è·¨å¤©ï¼‰
            initDate();
            updateStreak();
            
            // æ»šåŠ¨åˆ°é¡¶éƒ¨
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // å¯¼å‡ºæ•°æ®
        function exportData() {
            const data = localStorage.getItem(STORAGE_KEY) || '[]';
            const blob = new Blob([data], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `ç”Ÿæ´»é‡åŒ–å¤‡ä»½_${new Date().toLocaleDateString()}.json`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            alert('æ•°æ®å·²å¯¼å‡ºï¼è¯·å¦¥å–„ä¿å­˜è¿™ä¸ªJSONæ–‡ä»¶ï¼Œç¨åå¯ä»¥ç”¨æ¥æ¢å¤æ•°æ®ã€‚');
        }

        // åº†ç¥åŠ¨ç”»ï¼ˆ confetti æ•ˆæœï¼‰
        function celebrate() {
            const container = document.getElementById('celebration');
            container.style.display = 'block';
            container.innerHTML = '';
            
            const colors = ['#f6e05e', '#9f7aea', '#f687b3', '#63b3ed', '#68d391', '#f6ad55'];
            
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + '%';
                confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.animationDelay = Math.random() * 2 + 's';
                confetti.style.opacity = Math.random();
                container.appendChild(confetti);
            }
            
            setTimeout(() => {
                container.style.display = 'none';
            }, 3000);
        }

        // é¡µé¢åŠ è½½æ—¶çš„æ¬¢è¿æ£€æŸ¥
        window.addEventListener('load', () => {
            const data = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
            const today = new Date().toDateString();
            const hasToday = data.some(r => new Date(r.date).toDateString() === today);
            
            if (hasToday) {
                // å¦‚æœä»Šå¤©å·²è®°å½•ï¼Œæ˜¾ç¤ºæŸ¥çœ‹æŒ‰é’®
                if (confirm('ä»Šå¤©å·²ç»è®°å½•è¿‡äº†ï¼è¦æŸ¥çœ‹ä»Šå¤©çš„ç”Ÿæ´»å¡ç‰‡å—ï¼Ÿ')) {
                    const todayRecord = data.find(r => new Date(r.date).toDateString() === today);
                    showResult(todayRecord);
                }
            }
        });
    </script>
